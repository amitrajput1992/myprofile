#!/bin/bash
MYPROFILEDIR="$(realpath "$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )/.." )"
LIFETRACKERDIR="$(realpath "$MYPROFILEDIR/../lifetracker" )"

SOURCE=$LIFETRACKERDIR/.encfs
DEST=$LIFETRACKERDIR/revealed

echo $DEST
df -h | grep $DEST

if [ "$?" = "0" ]; then
	echo "$DEST already mounted"
	exit 1
else
    echo "encfs $SOURCE $DEST"
    encfs $SOURCE $DEST
	exit 0
fi

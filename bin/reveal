#!/bin/bash

PARENTDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )"/../ && pwd )"
DIR="$( readlink -e $PARENTDIR )"
SOURCE=$DIR/.encfs
DEST=$DIR/revealed
echo $DEST
df -h | grep $DEST
if [ "$?" = "0" ]; then
	echo "$DEST already mounted"
	exit 1
else
    echo "encfs $SOURCE $DEST"
    encfs $SOURCE $DEST
	exit 0
fi
